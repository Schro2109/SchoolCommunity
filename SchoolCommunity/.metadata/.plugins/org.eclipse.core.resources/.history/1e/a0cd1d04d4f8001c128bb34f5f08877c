DROP TABLE ACCOUNT;
CREATE TABLE ACCOUNT(
	ID VARCHAR2(20) PRIMARY KEY NOT NULL,
	PASSWORD VARCHAR2(20) NOT NULL,
	NAME VARCHAR2(30) NOT NULL
);
INSERT INTO ACCOUNT VALUES('admin','1234','관리자');

DROP TABLE POST_NEWS;
CREATE TABLE POST_NEWS(
	PCODE NUMBER(6) PRIMARY KEY NOT NULL,
	PTYPE CHAR(4) NOT NULL,
	WRITER VARCHAR2(20) NOT NULL,
	TITLE VARCHAR2(100) NOT NULL,
	CONTENTS VARCHAR2(1000),
	FOREIGN KEY (WRITER) REFERENCES ACCOUNT (ID)
);
DROP TABLE COMMENT;
CREATE TABLE COMMENT(
	CMCODE NUMBER(6) PRIMARY KEY,
	WRITER VARCHAR2(20),
	CONTENTS VARCHAR2(500),
);
DROP TABLE REPLY;
CREATE TABLE REPLY(
	RCODE NUMBER(6) PRIMARY KEY,
	WRITER VARCHAR2(20),
	CONTENTS VARCHAR2(500)
);